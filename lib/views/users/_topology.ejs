<div class="boxdetail">
  <div class="box-row">
    <div class="user detail">
      <h2 style="margin-top: 0;"><a href="/topologies/<%= topology._id.toHexString() %>"><%= topology.name %></a></h2>
      <div class="field"><span class="box-title">Description:</span><span class="box-result">
        <% if(!!topology.config && !!topology.config.properties && topology.config.properties.description) { %>
          <%= topology.config.properties.description %>
        <% } else { %>
          No description yet
        <% } %>
        </span></div>
      <div class="column">
        <div class="field"><span class="box-title">Visibility:</span><span class="box-result"><%= topology.visibility %></span></div>
      </div>
      <div class="column">
        <div class="field"><span class="box-title">Status:</span><span class="box-result"><%= topology.status %></span></div>
      </div>
      <div class="box-details">
        <span class="creado">updated <%= timeago( new Date(Date.parse(topology.updated_at)) ) %></span>
      </div>
    </div>
  </div>
</div>
