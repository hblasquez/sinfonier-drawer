<div class="boxdetail">
  <div class="box-row">
    <div id="__<%= user.name %>" class="user detail">
      <h2 style="margin-top: 0;"><a href="/users/<%= user.name %>"><%= user.name %></a> <%- twitterLink(user) %></h2>
      <div class="column">
        <div class="field"><span class="box-title" >Name:</span><span class="box-result" ><%= user.firstname %></span></div>
        <div class="field"><span class="box-title" >Organization:</span><span class="box-result" ><%= user.organization %></span></div>
        <div class="field"><span class="box-title" >Email:</span><span class="box-result" ><%= (!!user.email_visibility) ?  user.email : '--' %></span></div>
  <% if (current_user.isAdmin()) {%>
        <div class="field"><span class="box-title" >Role:</span><span class="box-result" ><%= user.role %></span></div>
  <% } %>
        <div class="field"><span class="box-title" >Time zone:</span><span class="box-result" ><%= timezoneMap[user.timezone] %></span></div>
      </div>
      <div class="column">
        <div class="field"><span class="box-title" >Surname:</span><span class="box-result" ><%= user.surname %></span></div>
        <div class="field"><span class="box-title" >Blog/Web:</span><span class="box-result" ><%- codeUrl(user.web) %></span></div>
        <div class="field"><span class="box-title" >Status:</span><span class="box-result status-info" ><%= user.status %></span></div>
        <div class="field"><span class="box-title" >Running topologies capacity:</span><span class="box-result" ><%= user.running_topologies_capacity %></span></div>
      </div>
      <div class="valuation-sprite">
        <div>
          <span>Global Rating:</span>
          <div  class="flexible-stars">
            <% for (var i=1;i<6;i++) { %>
            <i class="<%= i<=user.rating ? 'valuations-ok':'valuations-none' %>"></i>
            <% } %>
          </div>
        </div>
      </div>
      <div class="box-details">
        <span class="creado">Created at <%= user.created_at %></span>
      </div>
      <% if (current_user.isAdmin()) {%>
      <a href="#" data-name="<%= user.name %>" class="delete-link" title="Delete">Delete</a>
      <% } %>
      <% if (current_user.isAdmin() || current_user.equals(user)) {%>
      <a href="/users/<%= user.name %>/edit" title="Edit" class="edit-link">Edit</a>
      <% } %>
    </div>
  </div>
</div>
