<div class="activity dashboard-item">
  <% if (activity.topology) {%>
	<div class="timeago"><%= timeago( new Date(Date.parse(activity.created_at)) ) %></div>

	<a href="/topologies/<%= activity.topology._id.toHexString() %>"><%= activity.topology.name %></a>
	<p>the request took <%= activity.duration %>ms, rendered in <%= activity.format %></p>
	<% } %>
</div>
